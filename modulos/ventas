from config.conexion import obtener_conexion
import streamlit as st

def modulo_ventas():
    st.title("üõí Registro de Venta")

    conn = obtener_conexion()
    cursor = conn.cursor()
    cursor.execute("SELECT Cod_barra, Nombre FROM Producto")
    productos = cursor.fetchall()

    if not productos:
        st.warning("‚ö†Ô∏è No hay productos disponibles.")
        return

    codigos = {nombre: cod for cod, nombre in productos}
    producto_seleccionado = st.selectbox("Selecciona un producto", list(codigos.keys()))
    cod_barra = codigos[producto_seleccionado]

    cantidad = st.number_input("Cantidad vendida", min_value=1, step=1)
    precio_unitario = st.number_input("Precio unitario", min_value=0.01, step=0.01, format="%.2f")


    id_empleado = st.session_state.get("usuario")

    if st.button("Registrar venta"):
        try:
            # Insertar en tabla Venta
            cursor.execute("""
                INSERT INTO Venta (Cod_barra, Id_empleado)
                VALUES (%s, %s)
            """, (cod_barra, id_empleado))
            conn.commit()
            id_venta = cursor.lastrowid  # Obtener ID generado

            # Insertar en ProductoxVenta
            cursor.execute("""
                INSERT INTO ProductoxVenta (Id_venta, Cod_barra, Cantidad_vendida, Precio_unitario)
                VALUES (%s, %s, %s, %s)
            """, (id_venta, cod_barra, cantidad, precio_unitario))
            conn.commit()

            st.success(f"‚úÖ Venta registrada correctamente. ID Venta: {id_venta}")

        except Exception as e:
            conn.rollback()
            st.error(f"‚ùå Error al registrar venta: {e}")
        finally:
            cursor.close()
            conn.close()

    if st.button("‚¨Ö Volver al men√∫"):
        st.session_state.module = None

